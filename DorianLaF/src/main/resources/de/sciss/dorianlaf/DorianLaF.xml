<synth>
   <style id="default">
<!--        <font name="DejaVu Sans Condensed" size="14"/> -->
      <font name="DejaVuSansCondensed" size="14"/>
      <state>
         <color value="#FFFFFF" type="FOREGROUND"/>
         <!-- <color value="#000000" type="BACKGROUND"/> -->
      </state>
   </style>
   <bind style="default" type="region" key=".*"/>
   <style id="textfield">
   </style>
   <bind style="textfield" type="region" key="Textfield"/>

   <style id="button">
      <!-- <state>
         <color value="#FF0000" type="FOREGROUND"/>
      </state> -->
      <state>
          <color value="#000000" type="TEXT_FOREGROUND"/>  <!-- 40 ! -->
      </state>
      <object id="buttonPainter" class="de.sciss.dorianlaf.ButtonPainter"/>
      <painter method="buttonBackground" idref="buttonPainter"/>
      <painter method="buttonBorder" idref="buttonPainter"/>
      <property key="Button.margin" type="insets" value="6 10 6 10"/>
   </style>
   <bind style="button" type="region" key="Button"/>

   <style id="panel">
      <object id="panelBackground" class="de.sciss.dorianlaf.PanelBackgroundPainter"/>
      <object class="javax.swing.plaf.ColorUIResource" id="startColor">
         <int>70</int>
         <int>70</int>
         <int>70</int>
      </object>
      <defaultsProperty key="Panel.startBackground" type="idref" value="startColor"/>
      <object class="javax.swing.plaf.ColorUIResource" id="endColor">
         <int>50</int>
         <int>50</int>
         <int>50</int>
      </object>
      <defaultsProperty key="Panel.endBackground" type="idref" value="endColor"/>
      <painter method="panelBackground" idref="panelBackground"/>
   </style>
   <bind style="panel" type="region" key="Panel"/>
</synth>